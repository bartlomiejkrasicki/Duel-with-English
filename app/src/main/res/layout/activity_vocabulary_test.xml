<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/testVocabularyToolbar"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        app:titleTextColor="@android:color/white"
        app:subtitleTextColor="@android:color/white"/>

    <fragment
        android:id="@+id/testFragment"
        android:name="vocabulary_test.VocabularyTestPreference$VocabularyTestPreferenceFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/testProgressBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:rcBackgroundPadding="6dp"
        app:rcRadius="20dp"
        app:rcBackgroundColor="@color/colorPrimaryDark"
        app:rcSecondaryProgressColor="@color/colorPrimaryDark"
        app:rcProgressColor="@color/Background" />

</LinearLayout>
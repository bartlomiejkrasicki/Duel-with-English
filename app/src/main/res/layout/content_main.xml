<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="main_activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_vocabulary"
            style="@style/Button.Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_weight="1"
            android:onClick="vocabularyButtonOnClick"
            android:text="@string/button_vocabulary_text" />

        <Button
            android:id="@+id/favouriteListButton"
            style="@style/Button.Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:onClick="favouriteButtonOnClick"
            android:text="@string/favourite_main_button" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/testButton"
            style="@style/Button.Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_column="0"
            android:onClick="testButtonOnClick"
            android:text="@string/mainMenuTestButton" />

        <Button
            android:id="@+id/Tenses"
            style="@style/Button.Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="@string/grammar"
            android:onClick="grammarButtonOnClick"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/aboutAuthorButton"
            style="@style/Button.Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_weight="2"
            android:onClick="aboutAuthorButtonOnClick"
            android:text="@string/about_author_button_text" />

    </TableRow>
</TableLayout>

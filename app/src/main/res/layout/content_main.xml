<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="main_activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button_vocabulary"
        style="@style/Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/space_between_objects"
        android:layout_marginTop="43dp"
        android:onClick="vocabularyButtonOnClick"
        android:text="@string/button_vocabulary_text" />

    <Button
        android:id="@+id/favouriteListButton"
        style="@style/Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_vocabulary"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/space_between_objects"
        android:onClick="favouriteButtonOnClick"
        android:text="@string/favourite_main_button" />

    <Button
        android:id="@+id/testButton"
        style="@style/Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favouriteListButton"
        android:layout_marginBottom="@dimen/space_between_objects"
        android:layout_marginLeft="@dimen/space_between_objects"
        android:layout_marginRight="@dimen/space_between_objects"
        android:layout_marginTop="@dimen/space_between_objects"
        android:onClick="testButtonOnClick"
        android:text="@string/mainMenuTestButton" />

    <Button
        android:id="@+id/button4"
        style="@style/Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testButton"
        android:layout_margin="@dimen/space_between_objects"
        android:text="Button" />

    <Button
        android:id="@+id/aboutAuthorButton"
        style="@style/Button.Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_margin="@dimen/space_between_objects"
        android:onClick="aboutAuthorButtonOnClick"
        android:text="@string/about_author_button_text" />

</RelativeLayout>

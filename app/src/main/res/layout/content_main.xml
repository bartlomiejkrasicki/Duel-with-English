<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:weightSum="2">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logowithblackbackground"
            android:padding="3dp" />

        <TextView
            android:id="@+id/mainMenuNameApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-10sp"
            android:text="@string/main_menu_app_name"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:elevation="5dp">

                <Button
                    android:id="@+id/vocabularyButtonMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentColor"
                    android:gravity="center|bottom"
                    android:onClick="vocabularyButtonOnClick"
                    android:paddingBottom="17dp"
                    android:singleLine="false"
                    android:text="@string/button_vocabulary_text"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="25dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_mage_hat_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:elevation="5dp">

                <Button
                    android:id="@+id/favouriteListButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentColor"
                    android:gravity="center|bottom"
                    android:onClick="favouriteButtonOnClick"
                    android:paddingBottom="5dp"
                    android:singleLine="false"
                    android:text="@string/favourite_main_button"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="25dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_to_favourite_list_icon_square" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:elevation="5dp">

                <Button
                    android:id="@+id/testButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentColor"
                    android:gravity="center|bottom"
                    android:onClick="testButtonOnClick"
                    android:paddingBottom="17dp"
                    android:singleLine="false"
                    android:text="@string/mainMenuTestButton"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="25dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_swords_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:elevation="5dp">

                <Button
                    android:id="@+id/dictionaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparentColor"
                    android:gravity="center|bottom"
                    android:onClick="dictionaryButtonOnClick"
                    android:paddingBottom="17dp"
                    android:singleLine="false"
                    android:text="@string/dictionary"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="25dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_dictionary_icon" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
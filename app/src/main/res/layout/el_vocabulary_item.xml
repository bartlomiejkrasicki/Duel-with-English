<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/el_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:background="@drawable/expandable_vocabulary_list_shape"
    android:layoutDirection="ltr"
    android:gravity="start">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelVocabularyImage"
        android:contentDescription="@string/levelVocabularyImage"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center_vertical"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/textColor"
        android:paddingStart="20sp"
        android:paddingEnd="0sp"
        android:id="@+id/ELdescription"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="9"
        android:layout_rowWeight="1"
        android:gravity="bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:paddingStart="20sp"
        android:paddingEnd="0sp"
        android:id="@+id/ELSubdescription"
        android:gravity="top|center_vertical"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnWeight="9"
        android:layout_rowWeight="1" />

</GridLayout>

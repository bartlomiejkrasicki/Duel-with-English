<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test_fragments.VocabularyTestJigsawWordFragment">

    <TextView
        android:id="@+id/test_jigsaw_hint"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/test_jigsaw_word"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:id="@+id/answer_linear_layout_jigsaw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        />

    <com.wefika.flowlayout.FlowLayout
        android:id="@+id/jigsawButtonsToCreateWord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/jigsawButtonToCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jigsaw_fragment_check_button"
        style="@style/Button.Custom"
        android:layout_margin="@dimen/fab_margin" />

</LinearLayout>
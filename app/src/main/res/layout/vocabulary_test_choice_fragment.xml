<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_listview">

        <TableRow
            android:id="@+id/testChoiceButtonRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/testChoiceOption1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"
                style="@style/Button.Custom"/>

            <Button
                android:id="@+id/testChoiceOption2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight="1"
                style="@style/Button.Custom"/>
        </TableRow>

        <TableRow
            android:id="@+id/testChoiceButtonRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/testChoiceOption3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"
                style="@style/Button.Custom"/>

            <Button
                android:id="@+id/testChoiceOption4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight="1"
                style="@style/Button.Custom"/>
        </TableRow>

        <TableRow
            android:id="@+id/testChoiceButtonRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/testChoiceOption5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"
                style="@style/Button.Custom"/>

            <Button
                android:id="@+id/testChoiceOption6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight="1"
                style="@style/Button.Custom"/>
        </TableRow>

        <TableRow
            android:id="@+id/testChoiceButtonRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/testChoiceOption7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"
                style="@style/Button.Custom"/>

            <Button
                android:id="@+id/testChoiceOption8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_weight="1"
                style="@style/Button.Custom"/>
        </TableRow>
    </TableLayout>

</LinearLayout>